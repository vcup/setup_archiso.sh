if [[ -z "$TMUX" ]] &&\
   [[ "$TERM_PROGRAM" != "vscode" ]] &&\
   [[ "$TERMINAL_EMULATOR" != "JetBrains-JediTerm" ]]; then
  ID=$(tmux ls | cut -d: -f1)
  if [[ -z "$ID" ]]; then
    exec tmux -u new-session
  else
    exec tmux -u attach-session -t "$ID"
  fi
fi

